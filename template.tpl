setInWindow('TRV', TRV, true);

const onSuccess = () => {
  	data.gtmOnSuccess();
};

const onFailure = () => {
  	log("Error: failed to trigger event on url: " + url + " with data: " + data);
    data.gtmOnFailure();
};

if (query('inject_script', url)) {
  injectScript(url, onSuccess, onFailure);
}


